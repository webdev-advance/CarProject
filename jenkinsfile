pipeline {
    agent any
    tools { 
        maven 'Maven 3.5.0' 
        jdk 'jdk8' 
    }
    
    stages {
    	stage ('Deploy'){
        	steps {
            	withCredentials([[ $class		:'UsernamePasswordMultiBinding',
            			       credentailsId	:'PCF_LOGIN',
            				   usernameVariable:'USERNAME',
            				   passwordVariable:'PASSWORD']]) {
            				       
            	sh 'cf login -a http:api.run.pivotal.io -u $USERNAME -p $PASSWORD'
            	sh 'cf push'
            				   }

        }

    }
        
    }

    

}
